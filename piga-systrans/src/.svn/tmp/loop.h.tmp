#include "abstractrule.h"

/// An abstract rule whose target domain is always the source domain
class Loop : public AbstractRule
{
public:
	Loop();

	/*!
	 * \brief Construct a Loop.
	 * \param program The program associated to this loop
	 * \param comment Anything, meant to be displayed
	 */
	Loop(Program program, QString comment=QString());
	
	/// Return the name of the type of abstract rule
	virtual QString ruleType() const;

private:
	Domain targetDomain(Domain current, TRule t) const;
};
#endif // LOOP_H
